extends layout

block content
    .container.container-main
        // Nav tabs
        - var cat = ['Numbers', 'Times', 'Days', 'Months', 'Colours', 'Pleasantries', 'Directions', 'People', 'Misc']
        ul.nav.nav-tabs(role='tablist')
            if currentUser
                li
                    a(href='/new')
                        i.fa.fa-plus.fa-lg(aria-hidden="true")
            each val in cat
                li.tabs(role='presentation')
                    a(href='#'+val.toLowerCase(), role='tab', data-toggle='tab')= val
                
        // Tab panes
        .tab-content
            each val in cat
                div(id="#" + val.toLowerCase(), class='tab-pane', role='tabpanel')
                    .panel.panel-default
                        table.table.table-bordered.table-striped
                            thead
                                tr
                                    th English
                                    th= lang
                                    if currentUser
                                        th.edit Edit
                            tbody
                                each datas, i in data
                                    if datas.category == val && datas[lang.toLowerCase()]
                                        tr
                                            td= datas.english
                                            td= datas[lang.toLowerCase()]
                                    if currentUser
                                        td.edit-cell
                                            a(href="/edit/"+datas._id) 
                                                i.fa.fa-pencil-square-o.fa-lg( aria-hidden="true")

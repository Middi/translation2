extends layout

block content
    .container
        h1.text-center Login
        .form#newform
            .row
                .col-xs-10.col-sm-6.col-md-6.col-sm-offset-3.col-md-offset-3.col-xs-offset-1
                    form(action='/login', method='POST')
                        .row
                            .form-group
                                input.form-control(type='text', name='username', placeholder='Username')
                        .row
                            .form-group
                                input.form-control(type='password', name='password', placeholder='Password')
                        .row
                            input.btn.btn-red.btn-block.btn-lg(type='submit')
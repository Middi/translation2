extends layout

block content
    .form
        .row
            .col-xs-12.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3
                h1 Register
                hr.colorgraph
                form(method='POST', action='/register')
                    .row
                        .col-xs-12.col-sm-6.col-md-6
                        .form-group
                            input#first_name.form-control.input-lg(type='text', name='name', placeholder='Name', tabindex='1')
                        .col-xs-12.col-sm-6.col-md-6
                        .form-group
                            input#display_name.form-control.input-lg(type='text', name='username', placeholder='Username', tabindex='2')
                        .form-group
                            input#email.form-control.input-lg(type='email', name='email', placeholder='Email Address', tabindex='3')
                    .row
                        .col-xs-12.col-sm-6.col-md-6
                        .form-group
                            input#password.form-control.input-lg(type='password', name='password', placeholder='Password', tabindex='4')
                        .col-xs-12.col-sm-6.col-md-6
                        .form-group
                            input#password_confirmation.form-control.input-lg(type='password', name='password2', placeholder='Confirm Password', tabindex='5')
                    hr.colorgraph
                    .row
                        .col-xs-12.col-md-6
                        input.btn.btn-blue.btn-block.btn-lg(type='submit', value='Register', tabindex='6')




extends layout

block content
    .container
        h1.text-center New Entry
        .form#newform
            .row
                .col-xs-10.col-sm-6.col-md-6.col-sm-offset-3.col-md-offset-3.col-xs-offset-1
                    form(action='/'+lang.toLowerCase()+'/entry', method='POST')
                        .row
                            .form-group
                                label English
                                input.form-control(type='text', name='trans[english]', placeholder='English')
                        .row
                            .form-group
                                label= lang
                                input.form-control(type='text', name='trans[translated]', placeholder=lang)
                        .row
                            .form-group
                                label Category
                                select.form-control(type='text', name='trans[category]')
                                    option Numbers
                                    option Times
                                    option Days
                                    option Months
                                    option Colors
                                    option Pleasantries
                                    option Directions
                                    option People
                                    option Misc
                        .row
                            .form-group
                                label Position
                                input.form-control(type='text', name='trans[cat_id]', placeholder='Position')
                                //- p= data
                        .row
                            input.btn.btn-red.btn-block.btn-lg(type='submit')
